<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CodeLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_A400</item>
        <item name="colorPrimaryVariant">@color/blue_A400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/orange_A400</item>
        <item name="colorSecondaryVariant">@color/orange_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="Theme.CodeLibrary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CodeLibrary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CodeLibrary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>